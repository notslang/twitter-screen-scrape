{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[0-9]+$"
    },
    "username": {
      "type": "string"
    },
    "time": {
      "description": "UNIX time at which the post was made",
      "minimum": 1136091600,
      "type": "integer"
    },
    "type": {
      "type": "string",
      "enum": [
        "image",
        "video"
      ]
    },
    "isRetweet": {
      "type": "boolean"
    },
    "retweet": {
      "type": "integer",
      "minimum": 0
    },
    "favorite": {
      "type": "integer",
      "minimum": 0
    },
    "reply": {
      "type": "integer",
      "minimum": 0
    },
    "text": {
      "type": "string"
    },
    "images": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "username",
    "time",
    "type",
    "isRetweet",
    "retweet",
    "favorite",
    "reply",
    "text",
    "images"
  ]
}
